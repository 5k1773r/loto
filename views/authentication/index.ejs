<% //authentication/index %>


<!--login modal-->
<div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <!-- <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button> -->
                <h1 class="text-center">Sign-in for a pinch of science in loto</h1>
            </div>
            <div class="modal-body">



                <!-- <form class="form col-md-12 center-block"> -->
                <form class="form col-md-12 center-block" role="form" method="POST" name="authentication" action="/Authentication/verify">
                    <div class="form-group">
                        <!-- <input type="text" class="form-control input-lg" placeholder="Email"> -->


                        <% if(login != "") { %>
                        <input name="login" type="text" class="input-block-level" id="login" placeholder="Enter login" value=<%= login %> >
                        <% } else { %>
                        <input name="login" type="text" class="input-block-level" id="login" placeholder="Enter login">
                        <% } %>

                    </div>
                    <div class="form-group">
                       <!--  <input type="password" class="form-control input-lg" placeholder="Password"> -->


                        <input name="password" type="password" class="input-block-level" id="password" placeholder="Enter password">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-inverse">Let me in !</button>
                        <span class="pull-right"><a href="#">Register</a></span><span><a href="#">Need help?</a></span>
                    </div>
                </form>





            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                    <%
                    if(message != "") {
                        information = "Incorrect login and/or password. Please try again !"
                    }
                    else {
                        information = "&nbsp;"
                    }
                    %>
                    <span class="control-group error"><%= information %></span>

                    <!-- <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button> -->
                </div>
            </div>
        </div>
    </div>
</div>

 